if [ "$dataset" == "boolean" ]; then
t=1
else
t=9
fi
prefix=new_unbalancedt${t}_${dataset}

n_gpus=1
export n_gpus=$n_gpus

  #unblanced MNIST t=1
  # 93.5 uncentered L=1 b=0 (bound: 51.2) (MC bound: 68.8)
