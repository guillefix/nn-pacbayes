export n_gpus=$n_gpus
#export n_procs=5


for rep in `seq 1 1`; do
echo $rep

./run_experiment_sample_cnn --prefix $prefix --m $m --dataset $dataset --network $net --number_layers $L --training --sigmaw $sigmaw --sigmab $sigmab --n_gpus $n_gpus --pooling $pool --boolfun_comp $boolfun_comp --boolfun $boolfun #--intermediate_pooling 1111 --intermediate_pooling_type none


done
